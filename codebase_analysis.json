{
    "project": {
        "name": "3rd-of-'kiln'-the-emoji-arpg",
        "version": "0.0.0",
        "description": "An isometric ARPG focused on spell creation and combat, featuring an 'Emoji' aesthetic mixed with pixel art."
    },
    "technology_stack": {
        "core": "TypeScript",
        "framework": "React 18",
        "bundler": "Vite",
        "rendering": {
            "ui": "React",
            "game_canvas": "PixiJS (via @pixi/react)",
            "animation": "Framer Motion"
        },
        "state_management": "React useState / useRef (Game Loop uses ref-based state mutation)",
        "physics": "Custom isometric physics system"
    },
    "architecture": {
        "pattern": "Hybrid ECS-like",
        "description": "The project separates the 'Game Loop' from the React UI. The `GameLoop.ts` orchestrates systems (Physics, Spells, Scanning) and updates a mutable `GameState` object. React components (HUD, GameCanvas) verify and render this state.",
        "key_directories": {
            "src/systems": "Core logic loops (GameLoop, Physics, Input)",
            "src/modules": "Feature-specific domain logic (Spells, Enemies, Player)",
            "src/components": "React UI components (HUD, MainMenu, Editors)",
            "src/content": "Game content definitions (Items, Registry)",
            "src/data": "Static data and JSON registries"
        }
    },
    "features": {
        "gameplay": [
            "Isometric Movement (WASD/Click)",
            "Spell Combat (Elemental Types: Fire, Ice, Lightning, Earth, Wind, etc.)",
            "Action RPG Mechanics (Health, Mana, Shield, Cooldowns)",
            "Inventory & Equipment System",
            "Quest System (Procedural Kill/Collect)",
            "Enemy AI (Patrol, Chase, Attack)"
        ],
        "tools": [
            "World Editor (In-game object placement)",
            "Spell Studio (Visual editor for spell properties)",
            "Pixel Forge (Pixel Art Creator)",
            "Bone Rigger (Skeletal Animation Tool)"
        ],
        "ui": {
            "main_menu": "Parallax cloud background, stylized interactive menu",
            "hud": "Health/Resource bars, Hotbar, XP tracking",
            "dev_tools": "Spawn menu, state manipulators"
        }
    },
